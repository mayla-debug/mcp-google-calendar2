FROM node:22-slim

# Verifica che stia usando proprio questo Dockerfile
RUN echo ">>> USING MY DOCKERFILE <<<"

# Installa git per eventuali dipendenze git
RUN apt-get update && apt-get install -y --no-install-recommends git ca-certificates \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copia solo i manifest per sfruttare la cache
COPY package*.json ./

# Se c'Ã¨ un lockfile usa ci, altrimenti install
RUN if [ -f package-lock.json ]; then npm ci; else npm install; fi

# Copia il resto dei sorgenti
COPY . .

# Build TypeScript
RUN npm run build

# Avvio del server MCP
CMD ["node", "build/index.js"]
